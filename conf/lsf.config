docker {
  enabled = false
}

singularity {

  enabled = true
  autoMounts = true

  cacheDir = '/nfs/cellgeni/imaging/singularity/cache'

}
executor {
    name = 'lsf'
    queueSize = 10
    // https://www.nextflow.io/docs/latest/executor.html#lsf
    perJobMemLimit = true
}

process {

  queue = 'imaging'

}
